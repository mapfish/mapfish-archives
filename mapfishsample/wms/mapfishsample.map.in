NAME C2C
STATUS ON
#SIZE 400 300
SYMBOLSET symbols.txt
EXTENT -180 -90 180 90
UNITS dd
SHAPEPATH "data"
IMAGECOLOR 255 255 255
FONTSET fonts.txt
MAXSIZE 20480

OUTPUTFORMAT
 NAME 'AGG'
 DRIVER AGG/PNG
 IMAGEMODE RGBA
 MIMETYPE "image/png"
END

WEB
  METADATA
    "wms_title"     "C2C WMS Server"                                ##required
    "wms_onlineresource" "http://%FQDN%/%PROJECT%/%VERSION%/wms?"   ##required
    "wms_srs"       "EPSG:4326 EPSG:54004"                          ##recommended
  END
END

PROJECTION
  "init=epsg:4326"   ##required
END

#
# Start of layer definitions
#

LAYER
  NAME parkings
  METADATA
    "wms_title"    "Parkings"   ##required
  END
  TYPE POINT
  STATUS ON
  CONNECTIONTYPE postgis
  CONNECTION "user=%DB_USER% password=%DB_PASSWORD% host=%DB_HOST% dbname=%DB_VERSION%_c2corg"
  DATA "geom from parkings_out"
  PROJECTION
    "init=epsg:4326"   ##recommended
  END  
  LABELITEM "name"
  LABELMAXSCALE 200000
  CLASS
    NAME "Parkings"
    LABEL
      TYPE TRUETYPE
      FONT "Vera"
      SIZE 8
      ANTIALIAS false
      COLOR 0 0 255
      POSITION ur
    END
    STYLE
      SYMBOL "triangle"
      COLOR 0 0 255
      SIZE 5
    END
  END
END # Layer

