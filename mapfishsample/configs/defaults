# Put here the default options

# Override this to true in your configuration file to enable debugging
export DEBUG="false"

# Override this if you have a different python version
export PYTHON_SITE=$PYTHON_HOME/lib/python2.4/site-packages

# You should override this with the version to appear in URL's
export VERSION="trunk"

# Set to empty string to enable WSGI
export HAS_WSGI="#"

# Database information
export DB_USER="www-data"
export DB_PASSWORD="www-data"
export DB_HOST="localhost"
export DB_VERSION="trunk"

export DB_URL=postgres://${DB_USER}:${DB_PASSWORD}@${DB_HOST}/${DB_VERSION}_mapfishsample

export MVN=mvn

function post_fetch_project() {
    JAVA_SRC=$PROJECT_MAPFISH_DIR/server/java
    GEO_LIB_SRC=$JAVA_SRC/mapfish-geo-lib
    (cd $GEO_LIB_SRC; $MVN clean install)
    PRINT_SRC=$JAVA_SRC/print
    (cd $PRINT_SRC; $MVN clean install)
    cp $PRINT_SRC/print-standalone/target/print-standalone.jar $PROJECT_DIR/print/
}
