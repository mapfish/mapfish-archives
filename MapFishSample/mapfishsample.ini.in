#
# MapFishSample - Pylons development environment configuration
#
# The %(here)s variable will be replaced with the parent directory of this file
#
[DEFAULT]
debug = %DEBUG%
# Uncomment and replace with the address which should receive any error reports
#email_to = you@yourdomain.com
smtp_server = localhost
error_email_from = paste@localhost

[server:main]
use = egg:Paste#http
host = 0.0.0.0
port = 5000

[composite:main]
use = egg:Paste#urlmap
/ = main_pylons
/mfbase = mfbase
/examples = examples

[app:mfbase]
use = egg:Paste#static
# Set here the path to your MapFish client/mfbase directory:
document_root = %MAPFISHDIR%/client/mfbase/

[app:examples]
use = egg:Paste#static
# Set here the path to your MapFish client/examples directory:
document_root = %MAPFISHDIR%/client/examples/

[app:main_pylons]
use = egg:MapFishSample
full_stack = true
cache_dir = %(here)s/data
beaker.session.key = mapfishsample
beaker.session.secret = somesecret

# database configuration
sqlalchemy.routing.url = %DB_ROUTING_URL%
sqlalchemy.search.url = %DB_SEARCH_URL%
sqlalchemy.geostat.url = %DB_GEOSTAT_URL%

# If you'd like to fine-tune the individual locations of the cache data dirs
# for the Cache data, or the Session saves, un-comment the desired settings
# here:
#beaker.cache.data_dir = %(here)s/data/cache
#beaker.session.data_dir = %(here)s/data/sessions

# Logging Setup
[loggers]
keys = root

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s,%(msecs)03d %(levelname)-5.5s [%(name)s] %(message)s
datefmt = %H:%M:%S
